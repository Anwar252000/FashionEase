    <style>
        .star-rating {
            display: inline-block;
            direction: rtl;
        }

            .star-rating input {
                display: none;
            }

            .star-rating label {
                color: #ccc;
                font-size: 24px;
                padding: 0 2px;
                cursor: pointer;
            }

                .star-rating label:before {
                    content: '\2605';
                }

            .star-rating input:checked ~ label {
                color: #ffc107; /* Change to desired color for selected star */
            }
    </style>

