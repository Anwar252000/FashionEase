        $(document).ready(function () {
            // Event listener for form submission
            $('.btn-order').on('click', function (e) {
                e.preventDefault(); // Prevent form submission

                // Get form data
                var reviewerName = $('input[name="ReviewerName"]').val();
                var reviewSubject = $('input[name="ReviewSubject"]').val();
                var reviewText = $('input[name="ReviewText"]').val();
                var ratings = $('input[name="Ratings"]:checked').val();
                var productId = $('input[name="ProductId"]').val();
                // Create data object to send in AJAX request
                var data = {
                    ReviewerName: reviewerName,
                    ReviewSubject: reviewSubject,
                    ReviewText: reviewText,
                    Ratings: ratings,
                    ProductId:productId
                };

                // Send AJAX request
                $.ajax({
                    url: '/Products/AddReview/', // URL to the action endpoint
                    type: 'post',
                    data: data,
                    success: function (response) {
                        // Handle success response
                        console.log('Form submitted successfully!', response);
                        location.reload();
                        // You can perform additional actions here, such as displaying a success message or redirecting
                    },
                    error: function (xhr, textStatus, errorThrown) {
                        // Handle error response
                        console.error('Form submission failed!', textStatus, errorThrown);
                        // You can display an error message or perform other error handling actions here
                    }
                });
            });
        });

    </script>