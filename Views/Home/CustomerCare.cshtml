
@{
    ViewBag.Title = "CustomerCare";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2></h2>


<h5 style="text-align:center; font-family:Arial"> This page will help customer to update their previous address even after getting their order dispatched!</h5>
<h6 style="text-align:center; font-family:'Times New Roman', Times, serif">in order to do so, you could click the form below and could update your existing shipping address for your email account</h6>

<div class="header-right" style="font-size: x-large">
    <ul>
        <li style="font-size:13px;"><a style="text-align:center" href="#signin-modal" id="loginlink" data-toggle="modal"><i class="icon-home"></i> UPDATE SHIPPING ADDRESS</a></li>
    </ul>

</div><!-- End .header-right -->



<div class="modal fade" id="signin-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="icon-close"></i></span>
                </button>

                <div class="form-box">
                    <div class="form-tab">
                        <ul class="nav nav-pills nav-fill" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="signin-tab" data-toggle="tab" href="#address" role="tab" aria-controls="signin" aria-selected="true">Update Shiipping Address</a>
                            </li>
                            @*<li class="nav-item">
                                    <a class="nav-link" id="register-tab" data-toggle="tab" href="#register" role="tab" aria-controls="register" aria-selected="false">Register</a>
                                </li>*@
                        </ul>
                        <div class="tab-content" id="tab-content-5">
                            <div class="tab-pane fade show active" id="signin" role="tabpanel" aria-labelledby="signin-tab">
                                <form action="/Home/UpdateShippingAddress/" method="post">

                                    <div class="form-group">
                                        <label for="address">Email Address *</label>
                                        <input type="text" class="form-control" name="userEmail" required>
                                    </div><!-- End .form-group -->


                                    <div class="form-group">
                                        <label for="address">Updated Shipping Address *</label>
                                        <input type="text" class="form-control" name="shippingAddress" required>
                                    </div><!-- End .form-group -->

                                    <div class="form-footer">
                                        <button type="submit" class="btn btn-outline-primary-2">
                                            <span>UPDATE</span>
                                            <i class="icon-long-arrow-right"></i>
                                        </button>



                                    </div><!-- End .form-footer -->

                                </form>
                                <!--<div class="form-choice">
                                    <center>     <label id="siginerror" style="color:darkred; " for="signin-error"></label></center>


                                </div>-->
                                <!-- End .form-choice -->
                            </div><!-- .End .tab-pane -->



                        </div><!-- End .tab-content -->
                    </div><!-- End .form-tab -->
                </div><!-- End .form-box -->
            </div><!-- End .modal-body -->
        </div><!-- End .modal-content -->
    </div><!-- End .modal-dialog -->
</div><!-- End .modal -->



