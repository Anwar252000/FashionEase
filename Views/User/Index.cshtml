
@{
    ViewBag.Title = "Index";
    Layout = "";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">


<div style="margin-top:30px; text-align:center; background-color:gray">

    <h3>
        All Users
        <a href="/User/Registration"> <input type="button" value="Add User (+)" class="btn btn-dark" /></a> </h3>
        
 
</div>
@{ int i = 0;}
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Contact</th>
           
            <th scope="col">Role</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in ViewBag.list)
        {
            i++;
        <tr>

            <th scope="row">@i</th>

            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Contact</td>
            
            <td>@(item.Role==null? "N/A": item.Role.Name)</td>
            <td>
            <button class="btn btn-primary"><a href="/User/Edit/@item.Id" style="color:white;">Edit</a></button>
            
            <form action="/User/Delete" method="post" style="color:white;">

                <input type="hidden" name="Id" value="@item.Id" />
                <button type="submit" class="btn alert-danger" style="background-color:red;">
                    Delete
                </button>
            </form>
            
            </td>
        </tr>
        }
    </tbody>
</table>
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
